{
    "env": {
        "jest": true,
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            "always"
        ],
        "semi": [
            "error",
            "never"
        ],
        "indent": [
            "warn",
            4
        ],
        "no-plusplus": "off",
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true,
                "allowAfterSuper": false,
                "allowAfterThisConstructor": false,
                "enforceInMethodNames": false,
                "allowFunctionParams": false
            }
        ],
        "no-use-before-define": "off"
    }
}